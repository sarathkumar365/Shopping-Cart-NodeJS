<section>
    <div class="container mt-5">
        <form action="" id="checkout-form">
            <div class="row">

                <div class="col-md-6">
                    <h2>Enter Delivery Details</h2>
                    <div>
                        <label for="" class="form-label">Address</label>


                        <input type="text" class="form-control" id="address" name="address"><br><br>
                        <label for="" class="form-label">Pincode</label><br>


                        <input type="text" name="pincode" id="pincode"><br><br>


                        <label for="" class="form-label">Mobile</label><br>
                        <input type="text" name="mobile" id="mobile"><br>
                        <input type="text" name="userID" id="" value="{{user._id}}" hidden>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="container mt-5 ml-5 checkout">
                        <h5>Total Amount : Rs.{{total}}</h5>
                        <hr>
                        <div class="payment">
                            <p>Payment Method</p>
                            <label for="" class="radio-inline">
                                <input type="radio" name="payment-method" value="COD" checked id="">COD
                            </label><br><br>
                            <label for="" class="radio-inline mt-2">
                                <input type="radio" name="payment-method" value="ONLINE" checked id="">ONLINE PAYMENT
                            </label>
                            <button class="btn btn-primary float-end" type="submit">checkout</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>