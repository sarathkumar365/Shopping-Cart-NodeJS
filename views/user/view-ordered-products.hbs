<section>
    <div class="container mt-4">
        <div class="row">
            {{#each productDetail}}
            <div class="col-md-3 p-3">
                <div class="card" style="width: 18rem; height:28rem">
                    <img src="/product-images/{{this.product._id}}.jpg" style="width: 15rem; height:16rem"
                        class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{this.product.name}}</h5>
                        <p>{{this.price}}</p>
                        <p class="card-text">{{this.product.category}}</p>
                        <p class="card-text">{{this.product.price}}</p>
                        <p class="card-text">Quantity : {{this.quantity}}</p>


                        {{!-- <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add To Cart</button>
                        --}}
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>